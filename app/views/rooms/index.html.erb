<%= content_for(:body_index, "index") %>

<div class="outer" ontouchstart="">
  <div class="out_relative">
    <div class="title_small">
      <img src="/logo_data_01.jpg">
    </div><br>
    <div class="kadomaru_red_futinasi inner">
        部屋一覧
    </div><br>
    
    <table class='table table-striped table-hover tbl_font'>
      <tr>
        <th class='id uesita'>ID</th>
        <th class='owner2 uesita'>オーナー</th>
        <th class='uesita'>メンバー</th>
      </tr>
      <% for i in 0..((@roomNum.count) -1) do %>
        <tr>
          <td><%= link_to @roomNum[i] ,   join_rooms_path(roomNum: @roomNum[i] , name: current_user.name , email: current_user.email) ,method: :put %></td>
          <td><%= link_to @ownName[i] ,   join_rooms_path(roomNum: @roomNum[i] , name: current_user.name , email: current_user.email) ,method: :put %></td>
    
          <% if @memberTxt[i].nil? %>
            <td><%= link_to '　' , join_rooms_path(roomNum: @roomNum[i] , name: current_user.name , email: current_user.email) ,method: :put %></td>
          <% else %>
            <td><%= link_to @memberTxt[i] , join_rooms_path(roomNum: @roomNum[i] , name: current_user.name , email: current_user.email) ,method: :put %></td>
          <% end %>
          
        </tr>
      <% end %>

    </table>
    <br>

    <div class="kadomaru inner">
        部屋新規作成
        <%= link_to '', rooms_path(email: current_user.email , name: current_user.name ,position:'owner') , method: :post %>
    </div><br>
    
    <div class="kadomaru inner">
        戻る
        <%= link_to '', controller: :selectroom %>
    </div><br>
  </div>
</div>
