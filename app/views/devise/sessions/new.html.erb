<%= content_for(:body_index, "index") %>

<div class="outer" ontouchstart="">
    <div class="out_relative">

      <div class="title_small">
        <img src="/logo_data_01.jpg">
      </div><br>
      <div class="kadomaru_red_futinasi inner">
          ログイン
        </div><br><br>
      <div class="col">
        <a href="rule.html" class="btn btn-twitter btn-xxl">
          <i class="fab fa-twitter fa-2x"></i>　Twitterでログインする
        </a>
      </div><br>

      <p class="border_text">または</p>   
      <br>
      <div class="col">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :名前 %>
            <%= f.text_field :name , autocomplete: "name" , required: true %>
          </div>
          <div class="field">
            <%= f.email_field :email, value: "a@a", type: "hidden" %>
          </div>
        
          <div class="field">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, value: "mimajopass", type: "hidden" %>
          </div>
        
          <div class="field">
            <%= f.password_field :password_confirmation, value: "mimajopass", type: "hidden" %>
          </div>
        
          <div class="actions">
            <%= f.submit '一時アカウントでログイン', class: "kadomaru_futinasi_pit_prim inner" %>
          </div>
        <% end %>

    </div><br><br>
  </div>
</div>
